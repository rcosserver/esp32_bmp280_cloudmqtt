bot = telebot.TeleBot(config.token)


#–ú–µ—Å—è—Ü
today = datetime.datetime.today()
mount = ['–ù–æ—è–±—Ä—è', '–î–µ–∫–∞–±—Ä—è', '–Ø–Ω–≤–∞—Ä—è', '–§–µ–≤—Ä–∞–ª—è', '–ú–∞—Ä—Ç–∞', '–ê–ø—Ä–µ–ª—è', '–ò—é–Ω—è', '–ò—é–ª—è', '–ê–≤–≥—É—Å—Ç–∞', '–°–µ–Ω—Ç—è–±—Ä—è', '–û–∫—Ç—è–±—Ä—è']
mounth_real = int(today.strftime("%m"))

#–¥–µ–Ω—å –∏ –º–µ—Å—è—Ü —Ç–µ–∫—Å—Ç–æ–º
day = today.strftime("%A")
if day == 'Monday':
    day = '–ø–æ–Ω–µ–¥–µ–ª—å–Ω–∏–∫'
elif day == 'Tuesday':
    day = "–≤—Ç–æ—Ä–Ω–∏–∫"
elif day == 'Wednesday':
    day = "—Å—Ä–µ–¥–∞"
elif day == 'Thursday':
    day = "—á–µ—Ç–≤–µ—Ä–≥"
elif day == 'Friday':
    day = "–ø—è—Ç–Ω–∏—Ü–∞"
elif day == 'Saturday':
    day = "—Å—É–±–±–æ—Ç–∞"
elif day == 'Sunday':
    day = "–í–æ—Å–∫—Ä–µ—Å–µ–Ω—å–µ"


#observation = owm.weather_at_place('–ú–æ—Å–∫–≤–∞')
